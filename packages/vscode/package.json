{
  "name": "neusis-code",
  "displayName": "Neusis Code",
  "description": "AI coding assistant powered by OpenCode",
  "version": "1.6.1",
  "publisher": "neusis",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/btriapitsyn/openchamber.git"
  },
  "qna": "https://discord.gg/ZYRSdnwwKA",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "claude",
    "gpt",
    "agent",
    "coding",
    "chatgpt",
    "groq",
    "assistant",
    "opencode",
    "neusis",
    "neusis-code"
  ],
  "icon": "assets/app-icon.png",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:neusis-code.openSidebar",
    "onView:neusis-code.chatView"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "neusis-code",
          "title": "Neusis Code",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "neusis-code": [
        {
          "type": "webview",
          "id": "neusis-code.chatView",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "neusis-code.openSidebar",
        "category": "Neusis Code",
        "title": "Open Sidebar",
        "icon": {
          "light": "assets/icon.svg",
          "dark": "assets/icon-titlebar.svg"
        }
      },
      {
        "command": "neusis-code.focusChat",
        "category": "Neusis Code",
        "title": "Focus Chat"
      },
      {
        "command": "neusis-code.restartApi",
        "category": "Neusis Code",
        "title": "Restart API Connection"
      },
      {
        "command": "neusis-code.showOpenCodeStatus",
        "category": "Neusis Code",
        "title": "Show OpenCode Status"
      },
      {
        "command": "neusis-code.openAgentManager",
        "category": "Neusis Code",
        "title": "Open Agent Manager",
        "icon": "$(circuit-board)"
      },
      {
        "command": "neusis-code.openActiveSessionInEditor",
        "category": "Neusis Code",
        "title": "Open Active Session in Editor",
        "icon": "$(link-external)"
      },
      {
        "command": "neusis-code.openNewSessionInEditor",
        "category": "Neusis Code",
        "title": "Open New Session in Editor",
        "icon": {
          "light": "assets/icon.svg",
          "dark": "assets/icon-titlebar.svg"
        }
      },
      {
        "command": "neusis-code.openCurrentOrNewSessionInEditor",
        "category": "Neusis Code",
        "title": "Open Session in Editor",
        "icon": "$(link-external)"
      },
      {
        "command": "neusis-code.addToContext",
        "category": "Neusis Code",
        "title": "Add to Context"
      },
      {
        "command": "neusis-code.explain",
        "category": "Neusis Code",
        "title": "Explain"
      },
      {
        "command": "neusis-code.improveCode",
        "category": "Neusis Code",
        "title": "Improve Code"
      },
      {
        "command": "neusis-code.newSession",
        "category": "Neusis Code",
        "title": "New Session",
        "icon": "$(add)"
      },
      {
        "command": "neusis-code.showSettings",
        "category": "Neusis Code",
        "title": "Settings",
        "icon": "$(settings-gear)"
      }
    ],
    "submenus": [
      {
        "id": "neusis-code.submenu",
        "label": "Neusis Code"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "neusis-code.submenu",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "neusis-code.openNewSessionInEditor",
          "group": "navigation@1"
        }
      ],
      "view/title": [
        {
          "command": "neusis-code.newSession",
          "when": "view == neusis-code.chatView",
          "group": "navigation@1"
        },
        {
          "command": "neusis-code.openCurrentOrNewSessionInEditor",
          "when": "view == neusis-code.chatView",
          "group": "navigation@2"
        },
        {
          "command": "neusis-code.openAgentManager",
          "when": "view == neusis-code.chatView",
          "group": "navigation@3"
        },
        {
          "command": "neusis-code.showSettings",
          "when": "view == neusis-code.chatView",
          "group": "navigation@4"
        }
      ],
      "neusis-code.submenu": [
        {
          "command": "neusis-code.explain"
        },
        {
          "command": "neusis-code.improveCode"
        },
        {
          "command": "neusis-code.addToContext"
        }
      ]
    },
    "configuration": {
      "title": "Neusis Code",
      "properties": {
        "neusis-code.backend": {
          "type": "string",
          "enum": ["auto", "opencode", "claude-cli"],
          "default": "auto",
          "description": "Backend selection: 'auto' for auto-detection, 'opencode' for OpenCode API, 'claude-cli' for Claude CLI"
        },
        "neusis-code.apiUrl": {
          "type": "string",
          "default": "",
          "description": "URL of an external OpenCode API server. Leave empty to auto-start a local instance."
        },
        "neusis-code.claudeCli.wslEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable WSL integration for Claude CLI on Windows"
        },
        "neusis-code.claudeCli.wslDistro": {
          "type": "string",
          "default": "Ubuntu",
          "description": "WSL distribution name (e.g., Ubuntu, Debian)"
        },
        "neusis-code.claudeCli.wslNodePath": {
          "type": "string",
          "default": "/usr/bin/node",
          "description": "Path to Node.js in the WSL distribution"
        },
        "neusis-code.claudeCli.wslClaudePath": {
          "type": "string",
          "default": "/usr/local/bin/claude",
          "description": "Path to Claude executable in the WSL distribution"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run build",
    "build": "bun run build:extension && bun run build:webview",
    "build:extension": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify --main-fields=module,main",
    "build:webview": "VITE_OPENCODE_URL=/api vite build",
    "dev": "concurrently -n \"ext,web\" -c \"cyan,magenta\" \"bun run watch:extension\" \"bun run watch:webview\"",
    "watch:extension": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch --sourcemap --main-fields=module,main",
    "watch:webview": "vite build --watch",
    "type-check": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p tsconfig.webview.json",
    "lint": "bunx eslint --ext .ts,.tsx src webview",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/vscode": "^1.85.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vscode/vsce": "^3.2.1",
    "concurrently": "^9.2.1",
    "esbuild": "^0.24.2",
    "typescript": "~5.8.3",
    "vite": "^7.1.2"
  },
  "dependencies": {
    "@openchamber/ui": "file:../ui",
    "@opencode-ai/sdk": "^1.1.48",
    "adm-zip": "^0.5.16",
    "jsonc-parser": "^3.3.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "yaml": "^2.8.1"
  }
}
